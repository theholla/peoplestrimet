{{#if addNewAlert}}
<h1>New Alert</h1>
<p>
  Reminder: New alerts will expire after 2 hours.
</p>
<br>
<div>
  <form>
    <div class="form-group">
      <label for="line">Select a Line:</label>
      {{view "select" content=lines
      optionValuePath="content.lineName"
      optionLabelPath="content.lineName"
      value=selectedLine}}
    </div>
    <br>
    <div class="form-group">
      <label for="stop">Select a Stop:</label>
      {{view "select" content=stops
      optionValuePath="content.stop_name"
      optionLabelPath="content.stop_name"
      value=selectedStop}}
    </div>
    <div class="form-group">
      <label for="issue">Issue: </label>
      {{input value=issue id="issue"}}
    </div>
    <br>
    <div class="form-group">
      <label for="location">Location: </label>
      {{input value=location id="location"}}
    </div>
    <br>
    <div class="form-group">
      <label for="comments">Comments: </label>
      {{input value=comments id="comments"}}
    </div>
    <button {{action 'saveAlert'}}>Save</button>
  </form>
</div>
{{else}}
<button class="btn btn-warning"{{action 'alertFormShow'}}>Post Alert</button>
{{/if}}
