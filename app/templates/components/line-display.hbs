<div class="all-blockbuttons">
  <div class="blockbutton pointer red" {{action 'viewRed'}}> Red Line Alerts</div>
  <div class="blockbutton pointer orange" {{action 'viewOrange'}}> Orange Line Alerts</div>
  <div class="blockbutton pointer yellow" {{action 'viewYellow'}}> Yellow Line Alerts</div>
  <div class="blockbutton pointer green" {{action 'viewGreen'}}> Green Line Alerts</div>
  <div class="blockbutton pointer blue" {{action 'viewBlue'}}> Blue Line Alerts</div>
</div>

{{#if viewLine}}
  <div class="view-line">
  <div class="view-line-header">{{alert.line}}</div>
    <ul id="alertList" class="group">
      <li>{{#each activeLine as |alert|}}
        <div id="alert">{{alert-tile alert=alert}}</div>
      {{/each}}
      </li>
    </ul>
    <div class="button pointer" {{action 'hideAlerts'}}>x</div>
  </div>
{{/if}}
